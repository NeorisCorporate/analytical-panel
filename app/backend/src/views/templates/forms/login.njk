<!-- form [login] -->
<form id="formLogin" class="needs-validation" autocomplete="on" novalidate>
    <div class="form-row">
        <div class="form-group col-12 mt-3">
            <input type="text" id="username" class="form-control rounded-0 border-top-0 border-right-0 border-left-0 bg-transparent shadow-none pl-0" autofocus required>
            <label for="formGroupUsername" id="labelUsername" class="label-placeholder">Usuário</label>

            <!-- form-validation feedback [frontend] -->
            <div class="valid-feedback">Parece bom!</div>
            <div class="invalid-feedback">Por favor, forneça uma senha válida!</div>
        </div>
        <div class="form-group col-12 mt-3">
            <input type="password" id="password" class="form-control rounded-0 border-top-0 border-right-0 border-left-0 bg-transparent shadow-none pl-0" autofocus required>
            <label for="formGroupPassword" id="labelPassword" class="label-placeholder">Senha</label>
            
            <!-- form-validation feedback [frontend] -->
            <div class="valid-feedback">Parece bom!</div>
            <div class="invalid-feedback">Por favor, forneça uma senha válida!</div>
        </div>
        <!-- form-group [buttons] -->
        <div class="form-group col-12 mx-auto d-block mt-3">
            <button type="submit" id="btnSubmit" class="btn btn-primary btn-block rounded-0">LOGIN</button>
            <button type="button" id="btnBackRoute" class="btn btn-secondary btn-block rounded-0">VOLTAR</button>
        </div>
        <!-- form-group validation feedback [backend] -->
        <div id="backendFeedback" class="form-group col-12 mt-3 d-block"></div>
    </div>
</form>
<!-- end -->