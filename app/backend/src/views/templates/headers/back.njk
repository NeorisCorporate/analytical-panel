<!-- EM CONSTRUÇÃO -->
<!-- header [back] -->
<header>
    <nav class="navbar navbar-expand fixed-top navbar-light bg-custom-lilac-2">
        <div class="container-fluid d-flex justify-content-between">
            <div><a href="{{ templates.header.back.buttons.backRoute.routeUrl }}" role="button" class="btn btn-default btn-outline-light header-button-backroute bg-transparent text-custom-lilac-1 rounded-0 border-0 shadow-none"><i class="icon-back-arrow"></i></a></div>
            <div class="flex-fill text-center"><span class="navbar-brand text-white {{ 'ml-md-5 mr-4 pr-3 pr-md-4' if templates.header.back.shopping else 'ml-md-5 mb-1 pl-md-1' }}">{{ templates.header.back.title }}</span></div>
            <div>
                <div class="d-flex justify-content-center">
                    {% if templates.header.back.buttons.filter.isActived %}
                    <div><button type="button" class="btn header-button-filter d-none d-md-block text-custom-lilac-1 shadow-none" data-toggle="modal" data-target="#filterModal"><i class="icon-menu-options"></i></button></div>
                    {% endif %}
                    {% if templates.header.back.buttons.menuKpi.isActived %}
                    <div class="d-none d-md-block">
                        <select class="selectpicker show-tick" data-width="59px" data-style="btn btn-sm header-dropdown-menu-kpi text-custom-lilac-1 shadow-none" data-dropdown-align-right="true" data-max-options="1" title="---" multiple>
                            <optgroup label="Indicadores" class="pt-0">
                                <option value="ABS">ABS</option>
                                <option value="M²">M²</option>
                            </optgroup>
                        </select>
                    </div>
                    {% endif %}
                    <div class="d-none d-md-block">
                        <div class="dropdown">
                            <a href="#" role="button" id="dropdownMenuUserAccount" class="btn btn-sm dropdown-toggle header-dropdown-menu-useraccount bg-transparent rounded-0 border-0 shadow-none" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="https://www.jamf.com/jamf-nation/img/default-avatars/generic-user-purple.png" alt="..." class="header-img-dropdown-menu-useraccount rounded-circle"></a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="#">Sair</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>